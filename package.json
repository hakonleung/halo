{
  "name": "halo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:dev": "pnpm --filter @halo/storage db:dev",
    "db:generate": "pnpm --filter @halo/storage db:generate",
    "db:migrate": "pnpm --filter @halo/storage db:migrate",
    "db:push": "pnpm --filter @halo/storage db:push",
    "db:studio": "pnpm --filter @halo/storage db:studio",
    "db:init": "pnpm --filter @halo/storage db:init",
    "db:reset": "pnpm --filter @halo/storage db:reset",
    "db:import": "pnpm --filter @halo/storage db:import"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
