{
  "name": "halo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "turbo run type-check",
    "prepare": "husky",
    "db:dev": "pnpm --filter @halo/storage db:dev",
    "db:generate": "pnpm --filter @halo/storage db:generate",
    "db:migrate": "pnpm --filter @halo/storage db:migrate",
    "db:push": "pnpm --filter @halo/storage db:push",
    "db:studio": "pnpm --filter @halo/storage db:studio",
    "db:init": "pnpm --filter @halo/storage db:init",
    "db:reset": "pnpm --filter @halo/storage db:reset"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^9.31.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
